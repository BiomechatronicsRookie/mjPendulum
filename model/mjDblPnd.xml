<mujoco model="linkage">
	<compiler angle="radian" autolimits="true"/>
	<option timestep="0.001" integrator="RK4">
	<flag sensornoise="enable" energy="enable"/>
	</option>
	<worldbody>
        <light diffuse=".5 .5 .5" pos="0 0 3" dir="0 0 -1"/>
		<geom type="plane" size="1 1 0.1" rgba=".9 0 0 1"/>
	<!-- First link -->
    	<body name="link A" pos="0 0 2.5" >
		<inertial pos="0 0 2.5" mass="0.1" diaginertia="0.0075 0.00001 0.0075"/>
    	<joint name="joint A" pos="0 0 0.5" axis="0 1 0"/>
    	<geom size="0.05 0.5" type="cylinder" rgba="0 0 0.9 1"/>
	<!-- Secind link (child) -->
    		<body name="link B" pos="0 0 0" >
			<inertial pos="0 0 0" mass="0.1" diaginertia="0.0075 0.00001 0.0075"/>
        	<joint name="joint B" pos="0 0 -0.5" axis="0 1 0"/>
        	<geom size="0.05 0.5" type="cylinder" rgba="0 0.9 0 1"/>
      		</body>
    	</body>
  	</worldbody>
	<actuator> 
		<motor joint="joint A" gear = "1" ctrlrange="-100 100"/>
	</actuator>
	<actuator> 
		<motor joint="joint B" gear = "1" ctrlrange="-100 100"/>
	</actuator>
</mujoco>